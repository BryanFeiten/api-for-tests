{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDirs": [
            "./src",
            "./tests"
        ],
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "strictPropertyInitialization": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./node_modules/",
        "./src/**/*.spec.ts",
    ]
}